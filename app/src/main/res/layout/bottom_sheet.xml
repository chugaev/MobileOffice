<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:id="@+id/bottom_sheet"
              android:layout_width="match_parent"
              android:layout_height="@dimen/bottom_sheet_height"
              android:background="@android:color/darker_gray"
              android:orientation="vertical"
              app:behavior_hideable="false"
              app:behavior_peekHeight="@dimen/bottom_sheet_height"
              app:layout_behavior="android.support.design.widget.BottomSheetBehavior">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/bottom_sheet_height"
        android:orientation="horizontal"
        android:background="@color/colorPrimary"
        android:gravity="center_vertical|center_horizontal">

        <ImageButton
            android:id="@+id/bold_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_format_b_icon"/>

        <ImageButton
            android:id="@+id/italic_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_format_i_icon"/>

        <ImageButton
            android:id="@+id/decrease_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_format_decrease_icon"/>

        <ImageButton
            android:id="@+id/increase_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_format_increase_icon"/>

    </LinearLayout>

</LinearLayout>